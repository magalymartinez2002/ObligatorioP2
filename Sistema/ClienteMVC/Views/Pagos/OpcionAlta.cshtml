@*Vista opcion de alta de controlador Pagos*@

@{
    ViewData["Title"] = "OpcionAlta";
}

<h1>Crear un nuevo pago</h1>

<form method="post" action="/pagos/opcionAlta">
    <label>
    <input type="radio" name="tipoPago" value="unico" /> Pago Único
    </label>
    <label>
    <input type="radio" name="tipoPago" value="recurrente" /> Pago Recurrente
    </label>
    <input type="submit" value="Seleccionar" />
</form>
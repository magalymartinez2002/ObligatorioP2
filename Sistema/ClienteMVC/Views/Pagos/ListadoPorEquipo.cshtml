@using Dominio;
@{
    ViewData["Title"] = "ListadoPorEquipo";
}

<h1>Listado de pagos del equipo</h1>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-info">@ViewBag.Mensaje</div>
}


<table class="table table-dark">
    <thead>
        <tr>
            <th>Email</th>
            <th>Descripcion</th>
            <th>Tipo de Pago</th>
            <th>Fecha</th>
            <th>Monto</th>
            <th>Metodo Pago</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Pago p in ViewBag.Listado)
        {
            <tr>
                <td>@p.Usuario.Email</td>
                <td>@p.Descripcion</td>
                @if (p is Recurrente r)
                {
                    <td>Recurrente</td>
                    <td>@r.FechaInicio</td>
                }
                @if (p is Unico u)
                {
                    <td>Unico</td>
                    <td>@u.Fecha</td>
                }

                <td>@p.Monto</td>
                <td>@p.MetodoDePago.ToString()</td>
            </tr>
        }

    </tbody>

</table>

    <form action="/pagos/listadoPorEquipo" method="post">
        <input type="date" name="fecha" />
        <input type="submit" value="Filtrar por fecha" />
    </form>
